---
title: Изменение пароля
---

{{#extend "general"}}
    {{#content "main"}}
        {{#> 'profile/profile'}}
            <ul class="profile__edit-pass">
                {{> 'profileEditInput/profileEditInput'
                    label='Старый пароль'
                    placeholder='•••••••••'
                    type='password'
                    name='oldPassword'
                }}
                {{> 'profileEditInput/profileEditInput'
                    label='Новый пароль'
                    placeholder='•••••••••'
                    type='password'
                    name='newPassword'
                }}
                {{> 'profileEditInput/profileEditInput'
                    label='Повторите новый пароль'
                    placeholder='•••••••••'
                    type='password'
                    name='rePassword'
                }}
            </ul>
            {{> 'button/button' text='Сохранить' styles='profile__save-button' }}
        {{/ 'profile/profile'}}
    {{/content}}
{{/extend}}
