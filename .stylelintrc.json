{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "color-hex-case": "lower",
    "selector-class-pattern": "[\\s\\S]*"
  },
  "ignoreFiles": [
    "dist/*",
    "node_modules/*"
  ]
}
