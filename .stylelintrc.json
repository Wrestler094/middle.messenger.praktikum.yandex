{
  "extends": [
    "stylelint-config-standard",
    "./node_modules/prettier-stylelint/config.js"
  ],
  "rules": {
    "indentation": 4,
    "string-quotes": "double",
    "selector-class-pattern": "^[a-z][a-zA-Z0-9_-]+$"
  },
  "ignoreFiles": [
    "dist/*",
    "node_modules/*",
    ".parcel-cache/*",
    ".github/*",
    "coverage/*"
  ]
}
