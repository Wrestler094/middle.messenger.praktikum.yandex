{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "api/*": ["./src/api/*"],
      "core": ["./src/core/"],
      "components/*": ["./src/components/*"],
      "helpers/*": ["./src/helpers/*"],
      "pages/*": ["./src/pages/*"],
      "services/*": ["./src/services/*"],
      "static/*": ["./static/*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true
  },
  "files": [
    "src/index.ts",
    "typings/app.d.ts",
    "typings/images.d.ts"
  ]
}
